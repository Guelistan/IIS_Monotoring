<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
    </handlers>
    
    <!-- Windows Authentication wird über IIS Manager konfiguriert -->
    
    <!-- In-Process Hosting unter vollem IIS -->
  <aspNetCore processPath="%LAUNCHER_PATH%" 
        arguments="%LAUNCHER_ARGS%" 
        hostingModel="inprocess" 
        stdoutLogEnabled="false" 
        stdoutLogFile=".\logs\stdout"
                forwardWindowsAuthToken="true">
      <environmentVariables>
        <environmentVariable name="ASPNETCORE_ENVIRONMENT" value="Production" />
        <environmentVariable name="ASPNETCORE_FORWARDEDHEADERS_ENABLED" value="true" />
      </environmentVariables>
    </aspNetCore>
    
    <!-- Error-Seiten für bessere Diagnose -->
    <httpErrors errorMode="Detailed" />
    
    <!-- Request-Limits für größere Uploads -->
    <security>
      <requestFiltering>
        <requestLimits maxAllowedContentLength="52428800" /> <!-- 50MB -->
      </requestFiltering>
    </security>
  </system.webServer>
  
  <!-- System.web für zusätzliche Windows Auth Konfiguration -->
  <system.web>
    <authentication mode="Windows" />
    <identity impersonate="false" />
    <authorization>
      <allow users="*" />
    </authorization>
  </system.web>
</configuration>