@model AppManager.Pages.Admin.DashboardModel
@using AppManager.Models
@using Microsoft.AspNetCore.Authorization

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>üìã App Dashboard</h2>

    <!-- Quick Actions - Management Links -->
    <div class="btn-group" role="group">
        <a class="btn btn-outline-success" asp-page="/Admin/ApplicationManagement" title="Windows Apps verwalten">
            ÔøΩ Windows Apps
        </a>
        <a class="btn btn-outline-primary" asp-page="/IISManager" title="IIS AppPools verwalten">
            ÔøΩ IIS AppPools
        </a>
        @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
        {
            <a class="btn btn-outline-warning" asp-page="/Admin/AppOwnership">ÔøΩ App-Owner</a>
            <a class="btn btn-outline-info" asp-page="/Admin/History">üìú History</a>
            <a class="btn btn-outline-secondary" asp-page="/Admin/Diagrams">üìä Diagramme</a>
        }
    </div>
</div>

@if (User.Identity?.IsAuthenticated == true)
{
    <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">üëã Willkommen, @User.Identity.Name!</h4>
        <p class="mb-0">
            Hier siehst du eine <strong>√úbersicht</strong> deiner Apps. 
            F√ºr <strong>Verwaltungsaktionen</strong> nutze die Buttons oben.
        </p>
    </div>
}
else
{
    <div class="alert alert-warning" role="alert">
        <p class="mb-0"><em>Du bist nicht eingeloggt.</em></p>
    </div>
}

<!-- üìä Anwendungs√ºbersicht (ReadOnly) -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="mb-0">ÔøΩ Anwendungs√ºbersicht</h3>
                <small class="text-muted">Schnell√ºbersicht √ºber alle deine Apps</small>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>üè∑Ô∏è Name</th>
                                <th>üìä Status</th>
                                <th>‚ö†Ô∏è Neustart erforderlich</th>
                                <th>üîß Verwaltung</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var app in Model.Applications)
                            {
                                <tr>
                                    <td>
                                        <strong>@app.Name</strong>
                                        @if (app.IsIISApplication)
                                        {
                                            <br><span class="badge bg-info">IIS AppPool</span>
                                        }
                                        else
                                        {
                                            <br><span class="badge bg-secondary">Windows App</span>
                                        }
                                    </td>
                                    <td>
                                        @if (app.IsStarted)
                                        {
                                            <span class="badge bg-success">‚úÖ L√§uft</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">‚ùå Gestoppt</span>
                                        }
                                    </td>
                                    <td>
                                        @{
                                            var restartStatus =
                                            (Model.RestartRequiredMap.ContainsKey(app.Id) && Model.RestartRequiredMap[app.Id])
                                            ? "<span class='badge bg-warning'>‚ö†Ô∏è Ja (Historie)</span>"
                                            : app.RestartRequired
                                            ? "<span class='badge bg-warning'>‚ö†Ô∏è Ja (manuell)</span>"
                                            : "<span class='badge bg-success'>‚úÖ Nein</span>";
                                        }
                                        @Html.Raw(restartStatus)
                                    </td>
                                    <td>
                                        @if (app.IsIISApplication)
                                        {
                                            <a asp-page="/IISManager" class="btn btn-primary btn-sm">
                                                üöÄ IIS Manager
                                            </a>
                                        }
                                        else
                                        {
                                            <a asp-page="/Admin/ApplicationManagement" class="btn btn-secondary btn-sm">
                                                üì± App Manager
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Start-Historie au√üerhalb der App-Tabelle -->
<h3 class="mt-5">üïì Start-Historie</h3>
@if (Model.LaunchHistory?.Any() == true)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>App</th>
                <th>Aktion</th>
                <th>Benutzer</th>
                <th>Zeitpunkt</th>
                <th>Grund</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in Model.LaunchHistory)
            {
                <tr>
                    <td>@(entry.Application?.Name ?? "Unbekannt")</td>
                    <td>
                        @if (entry.Action == "Start")
                        {
                            <span class="badge bg-success">‚ñ∂Ô∏è Start</span>
                        }
                        else if (entry.Action == "Stop")
                        {
                            <span class="badge bg-danger">‚èπÔ∏è Stop</span>
                        }
                        else if (entry.Action == "Restart")
                        {
                            <span class="badge bg-warning">üîÑ Restart</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@entry.Action</span>
                        }
                    </td>
                    <td>
                        @if (entry.User != null)
                        {
                            <span>@entry.User.Vorname @entry.User.Nachname</span>
                        }
                        else
                        {
                            <span class="text-muted">System</span>
                        }
                    </td>
                    <td>@entry.LaunchTime.ToString("dd.MM.yyyy HH:mm:ss")</td>
                    <td>@entry.Reason</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted"><em>Keine Start-Historie vorhanden.</em></p>
}