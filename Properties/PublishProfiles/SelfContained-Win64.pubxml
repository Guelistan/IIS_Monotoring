<?xml version="1.0" encoding="utf-8"?>
<Project>
  <PropertyGroup>
    <!-- Target -->
    <TargetFramework>net8.0-windows</TargetFramework>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>

    <!-- Self-contained, single-file publish -->
    <SelfContained>true</SelfContained>
    <PublishSingleFile>true</PublishSingleFile>
    <EnableCompressionInSingleFile>true</EnableCompressionInSingleFile>
    <IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>

    <!-- Size vs safety: trimming off by default (EF/Identity/Razor) -->
    <PublishTrimmed>false</PublishTrimmed>
    <PublishReadyToRun>false</PublishReadyToRun>

    <!-- Reduce output size -->
    <DebugType>none</DebugType>
    <DebugSymbols>false</DebugSymbols>
    <GenerateDocumentationFile>false</GenerateDocumentationFile>

    <!-- Limit satellite resource languages to only German (adjust if needed) -->
    <SatelliteResourceLanguages>de</SatelliteResourceLanguages>

    <!-- Already in csproj, repeat here to ensure profile isolation -->
    <InvariantGlobalization>true</InvariantGlobalization>

    <!-- File system publish -->
    <PublishProtocol>FileSystem</PublishProtocol>
    <DeleteExistingFiles>true</DeleteExistingFiles>
    <PublishDir>bin\Publish\SelfContained\win-x64\</PublishDir>

    <!-- IIS in-process hosting -->
    <AspNetCoreHostingModel>InProcess</AspNetCoreHostingModel>
  </PropertyGroup>
</Project>
